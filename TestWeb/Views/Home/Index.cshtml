    <script type="text/javascript">
        //var grid;
        function Add() {
            $("#Id").val("");
            $("#Number").val("");
            $("#SerialNumber").val("");
            $("#simModal").modal("show");
        }
        function Edit(ID,Number,SerialNumber) {
            debugger;
            $("#Id").val(ID);
            $("#Number").val(Number);
            $("#SerialNumber").val(SerialNumber);
            $("#simModal").modal("show");
        }

        
        
        $("#btnSave").click(function () {
            var sim = {
                ID: $("#Id").val(),
                Number: $("#Number").val(),
                SerialNumber: $("#SerialNumber").val()
            };
             
        });




        function Save() {
             

            var sim = {
                ID: $("#Id").val(),
                Number: $("#Number").val(),
                SerialNumber: $("#SerialNumber").val()
            };

            $.ajax({
                url: "http://localhost:58173/api/Sims",
                type: "Post",
                data: sim, 
                success: function (message) {
                    debugger; 
                    Loaddata();
                    $("#simModal").modal("hide");
                    $("#display-success").fadeIn();
                    $("#messagetext").text(message);
                    window.setTimeout(function () {
                        $("#display-success").fadeOut(300)
                    }, 4000);
                },
                error: function () { alert('error'); }
            });
        }

        function Remove(e) {
            $.ajax({ url: "http://localhost:58173/api/Remove", type: "POST", data: { id: e.data.id } })
                .done(function () {
                    grid.reload();
                })
                .fail(function () {
                    alert("Unable to remove.");
                });
        }


        function Loaddata() {
          //  $('#tbsim').append().Remove();
            $.ajax({
                url: "http://localhost:58173/api/Sims",
                type: "GET",

                success: function (data) {
                   
                    var trHTML = '';
                    for (var i = 0; i < data.length; i++) {
                        var sim = {
                            ID: data[i].ID,
                            Number: data[i].Number,
                            SerialNumber: data[i].SerialNumber
                        };
                        trHTML += "<tr><td> " + data[i].ID + "</td>     <td>" + data[i].Number + "</td>     <td>   " + data[i].SerialNumber + "</td> <td> <button type='button' class='btn btn-primary' id='bt" + i + "'  onclick =Edit(" + data[i].ID  +',' + data[i].Number +','+ '"'+ data[i].SerialNumber +'"'  + ")>Edit</button>  </td></tr>";
                      }
                    $('#tbsimresult').html(trHTML); 
                },
                error: function (msg) { alert(msg.error); }
            });

        }
         
        $(document).ready(function () {
            Loaddata();
           $("#btnAddSim").on("click", Add);
           $("#btnSave").on("click", Save);
       
          
        });
    </script>
 
  <!-- Main content -->
<section class="content">
   
    <!-- /.row -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"> </h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            
                            <div class="input-group-btn">
                                <button type="button" id="btnAddSim" class="btn btn-default pull-right">New Sim</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover" id="tbsim">
                        <thead>
                            <tr>
                                <th>Id </th>
                                <th>Number</th>
                                <th>Serial Number</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody id="tbsimresult"></tbody> 
                    </table>
                </div>
                <div id="display-success" class="callout callout-info" style="display:none;"> <label id="messagetext"></label></div>
