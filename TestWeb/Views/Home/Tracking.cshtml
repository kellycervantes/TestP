    <script type="text/javascript">
        //var grid;
        
         

         
        function Loaddata() {
          //  $('#tbsim').append().Remove();
            $.ajax({
                url: "http://localhost:58173/api/Tracking",
                type: "GET",

                success: function (data) {
                   
                    var trHTML = '';
                    for (var i = 0; i < data.length; i++) {
                        
                        trHTML += "<tr><td> " + data[i].Number + "</td>     <td>" + data[i].TotalMinutes + "</td>    <td>" + data[i].MinutesUsed + "</td>     <td>   " + data[i].MinutesLeft + "</td> >/tr>";
                      }
                    $('#tbsimresult').html(trHTML); 
                },
                error: function (msg) { alert(msg.error); }
            });

        }
         
        $(document).ready(function () {
            Loaddata();
           $("#btnAddSim").on("click", Add);
           $("#btnSave").on("click", Save);
            // $("#btnSearch").on("click", Search);
        });
    </script>
 
