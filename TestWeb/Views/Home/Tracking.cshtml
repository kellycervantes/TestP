                                <button type="button" id="btnAddSim" class="btn btn-default pull-right">Nueva Sim</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover" id="tbsim">
                        <thead>
                            <tr> 
                                <th>Number</th>
                                <th>Total Minutes </th>
                                <th>Minutes Used</th>
                                <th>Minutes Left</th>
                            </tr>
                        </thead>
                        <tbody id="tbsimresult"></tbody> 
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>
    
 